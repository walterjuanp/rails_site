<header id="header">
  <div class="title">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-md-6 brand">
          <p><%= link_to 'Site', root_path %></p>
        </div>
        <div class="col-sm-6 col-md-6 quote">
          <p>Things about a not so young developer</p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="menu">
    <div class="container">
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
          <a href="#">HOME /</a>
          <a href="#">BLOG /</a>
          <a href="#">ABOUT /</a>
          <a href="#">SEARCH /</a>
        </div>
      </div>
    </div>
  </div>
  
  <% if current_user %>
    <div class="signed">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <p>
              <%= tview('signed_as', :email => current_user.email) %>
              <%= link_to I18n.tbtn('sign_out'), logout_path %>, 
              <%= link_to I18n.tbtn('backoffice'), bo_dashboard_path %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</header>