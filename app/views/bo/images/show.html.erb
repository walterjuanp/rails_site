<% content_for_header I18n.tmodel(Image), tview('image') %>

<div class="row action-buttons">
  <div class="col-md-7">
    <%= link_to I18n.tbtn('list_of_images'), bo_images_path, :class => 'btn btn-default' %>
  </div>
  <div class="col-md-5 align-right">
    <div class="btn-group">
      <%= image_dropdown_styles_button @image  %>
      <%= link_to edit_bo_image_path(@image), :class => 'btn btn-default' do %>
        <span class="glyphicon glyphicon-pencil"></span>
      <% end %>
      <%= link_to bo_image_path(@image), :class => 'btn btn-danger', :confirm => I18n.tmsg('are_you_sure'), :method => :delete do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt><%= I18n.tattr(Image, :name) %></dt>
      <dd><%= @image.name %></dd>
      <dt><%= I18n.tattr(Image, :alt) %></dt>
      <dd><%= @image.alt %></dd>
      <dt><%= I18n.tattr(Image, :image) %></dt>
      <dd><%= image_tag @image.image.url(:thumb) %></dd>
    </dl>
  </div>
</div>

