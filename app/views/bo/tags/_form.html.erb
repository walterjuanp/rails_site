<%# PARAMS: tag
%>
<%= form_for [:bo, tag] do |f| %>
  <%= render 'shared/errors', :target => tag %>
  
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>