
<% if notice %>
  <div class="alert alert-success">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p><%= notice %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if flash[:info] %>
  <div class="alert alert-info">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p><%= flash[:error] %></p></p>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-danger">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p><%= flash[:error] %></p></p>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if flash[:warning] %>
  <div class="alert alert-warning">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p><%= flash[:warning] %></p></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
