<% content_for_header I18n.tmodel(User), tview('user') %>

<div class="row action-buttons">
  <div class="col-md-7">
    <%= link_to I18n.tbtn('list_of_users'), bo_users_path, :class => 'btn btn-default' %>
  </div>
  <div class="col-md-5 align-right">
    <div class="btn-group">
      <%= link_to edit_bo_user_path(@user), :class => 'btn btn-default' do %>
        <span class="glyphicon glyphicon-pencil"></span>
      <% end %>
      <%= link_to bo_user_path(@user), :class => 'btn btn-default', :confirm => I18n.tmsg('are_you_sure'), :method => :delete do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt><%= I18n.tattr(User, :email) %></dt>
      <dd><%= @user.email %></dd>
      <dt><%= I18n.tattr(User, :full_name) %></dt>
      <dd><%= @user.full_name %></dd>
      <dt><%= I18n.tattr(User, :bio) %></dt>
      <dd><%= @user.bio %></dd>
    </dl>
  </div>
</div>

