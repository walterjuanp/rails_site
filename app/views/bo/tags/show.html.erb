<% content_for_header I18n.tmodel(Tag), tview('tag') %>

<div class="row action-buttons">
  <div class="col-md-7">
    <%= link_to I18n.tbtn('list_of_tags'), bo_tags_path, :class => 'btn btn-default' %>
  </div>
  <div class="col-md-5 align-right">
    <div class="btn-group">
      <%= link_to edit_bo_tag_path(@tag), :class => 'btn btn-default' do %>
        <span class="glyphicon glyphicon-pencil"></span>
      <% end %>
      <%= link_to bo_tag_path(@tag), :class => 'btn btn-default', :confirm => I18n.tmsg('are_you_sure'), :method => :delete do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt><%= I18n.tattr(Tag, :name) %></dt>
      <dd><%= @tag.name %></dd>
      <dt><%= I18n.tattr(Tag, :slug) %></dt>
      <dd><%= @tag.slug %></dd>
      <dt><%= I18n.tattr(Tag, :description) %></dt>
      <dd><%= @tag.description %></dd>
    </dl>
  </div>
</div>
