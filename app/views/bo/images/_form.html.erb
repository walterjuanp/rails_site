<%# PARAMS: image
%>


<%= render 'bo/shared/errors', :target => image %>

<div class="row">
  <div class="col-md-8">
    <%= form_for [:bo, image], :html => {:class => 'form-horizontal'} do |f| %>
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <%= f.label :image, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.file_field :image, :class => '' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, :class => 'form-control', :autofocus => true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :alt, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :alt, :class => 'form-control' %>
        </div>
      </div>
    </form>
    <% end %>
  </div>
</div>